{
    "kind": "List",
    "apiVersion": "v1",
    "metadata": {},
    "items": [
        {
            "kind": "ImageStream",
            "apiVersion": "v1",
            "metadata": {
                "name": "jira",
                "creationTimestamp": null,
                "labels": {
                    "app": "jira"
                }
            },
            "spec": {
                "dockerImageRepository": "amdonov/jira"
            },
            "status": {
                "dockerImageRepository": ""
            }
        },
        {
            "kind": "DeploymentConfig",
            "apiVersion": "v1",
            "metadata": {
                "name": "jira",
                "creationTimestamp": null,
                "labels": {
                    "app": "jira"
                }
            },
            "spec": {
                "strategy": {
                    "resources": {}
                },
                "triggers": [
                    {
                        "type": "ConfigChange"
                    },
                    {
                        "type": "ImageChange",
                        "imageChangeParams": {
                            "automatic": true,
                            "containerNames": [
                                "jira"
                            ],
                            "from": {
                                "kind": "ImageStreamTag",
                                "name": "jira:latest"
                            }
                        }
                    },
                    {
                        "type": "ImageChange",
                        "imageChangeParams": {
                            "automatic": true,
                            "containerNames": [
                                "jira-db"
                            ],
                            "from": {
                                "kind": "ImageStreamTag",
                                "name": "postgresql-92-centos7:latest"
                            }
                        }
                    }
                ],
                "replicas": 1,
                "selector": {
                    "deploymentconfig": "jira"
                },
                "template": {
                    "metadata": {
                        "creationTimestamp": null,
                        "labels": {
                            "deploymentconfig": "jira"
                        }
                    },
                    "spec": {
                        "volumes": [
                            {
                                "name": "jira-app",
                                "persistentVolumeClaim": {
                                      "claimName": "jira-app"
                                }
                            },
                            {
                                "name": "jira-db",
                                "persistentVolumeClaim": {
                                      "claimName": "jira-db"
                                }
                            }
                        ],
                        "containers": [
                            {
                                "name": "jira",
                                "image": "amdonov/jira",
                                "ports": [
                                    {
                                        "containerPort": 8080,
                                        "protocol": "TCP"
                                    }
                                ],
                                "resources": {},
                                "volumeMounts": [
                                    {
                                        "name": "jira-app",
                                        "mountPath": "/var/atlassian/application-data/jira"
                                    }
                                ]
                            },
                            {
                                "name": "jira-db",
                                "image": "openshift/postgresql-92-centos7",
                                "ports": [
                                    {
                                        "containerPort": 5432,
                                        "protocol": "TCP"
                                    }
                                ],
                                "env": [
                                    {
                                        "name": "POSTGRESQL_DATABASE",
                                        "value": "jira"
                                    },
                                    {
                                        "name": "POSTGRESQL_PASSWORD",
                                        "value": "jira123"
                                    },
                                    {
                                        "name": "POSTGRESQL_USER",
                                        "value": "jira"
                                    }
                                ],
                                "resources": {},
                                "volumeMounts": [
                                    {
                                        "name": "jira-db",
                                        "mountPath": "/var/lib/pgsql/data"
                                    }
                                ]
                            }
                        ]
                    }
                }
            },
            "status": {}
        },
        {
            "kind": "ImageStream",
            "apiVersion": "v1",
            "metadata": {
                "name": "postgresql-92-centos7",
                "creationTimestamp": null,
                "labels": {
                    "app": "jira"
                }
            },
            "spec": {
                "dockerImageRepository": "openshift/postgresql-92-centos7"
            },
            "status": {
                "dockerImageRepository": ""
            }
        },
        {
            "kind": "Service",
            "apiVersion": "v1",
            "metadata": {
                "name": "jira",
                "creationTimestamp": null,
                "labels": {
                    "app": "jira"
                }
            },
            "spec": {
                "ports": [
                    {
                        "name": "8080-tcp",
                        "protocol": "TCP",
                        "port": 8080,
                        "targetPort": 8080,
                        "nodePort": 0
                    },
                ],
                "selector": {
                    "deploymentconfig": "jira"
                }
            },
            "status": {
                "loadBalancer": {}
            }
        }
    ]
}

